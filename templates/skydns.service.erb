[Unit]
Description=SkyDNS
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStop=-/usr/bin/docker stop <%= @containername %>
ExecStopPost=-/usr/bin/docker rm -f <%= @containername %>
SuccessExitStatus=0 2
ExecStart=/usr/bin/docker run <%= @runargs %> --name <%= @containername %> <%= @reponame %>\
 -addr=<%= @addr %>\
 -ca-cert=<%= @ca_cert %>\
 -discover=<%= @discover %>\
 -dnssec=<%= @dnssec %>\
 -domain=<%= @domain %>\
 -hostmaster=<%= @hostmaster_real %>\
 -local=<%= @local %>\
 -machines=<%= @machines %>\
 -nameservers=<%= @nameservers %>\
 -no-rec=<%= @no_rec %>\
 -rcache=<%= @rcache %>\
 -rcache-ttl=<%= @rcache_ttl %>\
 -round-robin=<%= @round_robin %>\
 -rtimeout=<%= @rtimeout %>\
 -scache=<%= @scache %>\
 -stubzones=<%= @stubzones %>\
 -systemd=<%= @systemd %>\
 -tls-key=<%= @tls_key %>\
 -tls-pem=<%= @tls_pem %>\
 -verbose=<%= @verbose %>
 

[Install]
WantedBy=multi-user.target
